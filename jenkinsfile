#!/usr/bin/env groovy

pipeline {
  agent any

  stages {
    stage('install app1 to host1') {
      steps {
        sh """
        cd app1/
        pwd
        chmod 400 2CB.pem
        ansible-playbook -i hosts main.yml
        """
      }
    }

    stage('install app2 to host2'){
      steps {
        sh """
        pwd
        cd app2/
        chmod 400 2CB.pem
        ansible-playbook -i hosts main.yml
        """
      }
    }
  }
}

